{
    "manifest_version": 2,
    "name": "Kata Tokoh",
    "short_name": "kata-tokoh",
    "description": "Menampilkan quote dari tokoh terkenal dunia ketika membuka tab baru.",
    "author": "github.com/lakuapik",

    "version": "1.0.1",

    "icons": {
        "48": "icons/48.png",
        "64": "icons/64.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "applications": {
        "gecko": {
            "id": "kata-tokoh@lakuapik"
        }
    },

    "chrome_url_overrides" : {
        "newtab": "src/newtab.html"
    },

    "permissions": [
        "storage",
        "https://raw.githubusercontent.com/lakuapik/quotes-indonesia/master/raw/quotes.min.json"
    ],

    "options_ui": {
        "page": "src/options.html",
        "browser_style": true,
        "chrome_style": true
    }
}